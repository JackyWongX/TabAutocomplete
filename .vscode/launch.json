{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "在 VSCode 中运行扩展",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: compile",
            "runtimeExecutable": "code"
        },
        {
            "name": "使用指定路径的 VSCode 运行扩展",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: compile",
            "runtimeExecutable": "C:\\Program Files\\Microsoft VS Code\\Code.exe"
        }
    ]
} 